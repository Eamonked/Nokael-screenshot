# Hybrid Deployment Configuration
# Copy this file to .env and customize for your hybrid environment

# Deployment Mode
DEPLOYMENT_MODE=hybrid
NODE_ENV=production
TENANT_CONFIG=single

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration (Local PostgreSQL with sync capability)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=screenshot_db
DB_USER=screenshot_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# License Configuration (Remote with offline fallback)
LICENSE_MODE=remote
LICENSE_SERVER_URL=https://your-license-server.com/api/license
LICENSE_CHECK_INTERVAL=604800000
OFFLINE_LICENSE_KEY=DEMO-XXXX-YYYY-ZZZZ-1234

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# S3 Configuration (Optional for hybrid)
ENABLE_S3=false
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Feature Flags
LICENSE_CHECK=true
AUDIT_LOGGING=true
FILE_UPLOAD=true
MULTI_TENANT=false
SYNC_ENABLED=true
OFFLINE_MODE=true

# API Configuration
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Sync Configuration (for hybrid mode)
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=50
SYNC_RETRY_ATTEMPTS=3
SYNC_MAX_QUEUE_SIZE=1000

# Remote API Configuration (for sync)
REMOTE_API_URL=https://api.your-domain.com
REMOTE_API_KEY=your_remote_api_key

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Network Configuration
NETWORK_TIMEOUT=30000
RETRY_DELAY=5000
MAX_RETRIES=3 