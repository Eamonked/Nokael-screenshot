{
  "name": "screenshot-electron",
  "version": "1.0.0",
  "description": "Security Incident Reporting System - Desktop Client",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build:preload": "tsc -p tsconfig.preload.json",
    "copy:pill": "node -e \"const fs=require('fs');const path=require('path');const distDir='dist/renderer';if(!fs.existsSync(distDir))fs.mkdirSync(distDir,{recursive:true});['pill.html','capture-menu.html','region-overlay.html','incident-form.html'].forEach(file=>fs.copyFileSync(`src/renderer/${file}`,`${distDir}/${file}`))\"",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload && npm run copy:pill",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "electron",
    "screenshot",
    "security",
    "incident",
    "reporting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "@types/sharp": "^0.31.1",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-global-key-listener": "^0.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.20.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.12.7",
    "sharp": "^0.34.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.screenshot.app",
    "productName": "Screenshot Security",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
